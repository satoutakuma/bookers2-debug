<div>
 <table class='table'>
 <% book.book_comments.each do |book_comment| %>
  <tr>
   <td><%= image_tag book_comment.user.get_profile_image(100,100) %><br>
       <%= book_comment.user.name %>
   </td>
   <td><%= book_comment.comment %></td>
   <td><% if book_comment.user == current_user %>
        <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: {"turbolinks" => false} %>
      <% end %>
   </td>
  </tr>
 <% end %>
</div>